<body>
  <%- include('../includes/navigation.ejs') %> 
    <main>
      <% if (orders.length < 1) { %>
        <h1>No order placed</h1>
      <% } else { %>
        <ul>
          <% orders.forEach(order => {  %>
            <li>
              <h1><%= order._id %> </h1>
              <ul>
                <% order.products.forEach(product => { %>
                 <li>
                  <p><%= product.title %> * <%= product.quantity %> ($<%= product.totalPrice %>)</p>
                 </li>
                <% }) %>
              </ul>
              $<%= order.totalPrice %> 
            </li>
          <% }) %>
        </ul>
      <% } %>
    </main>
